<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white">

    <LinearLayout
        android:id="@+id/holder_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        tools:ignore="MissingConstraints"
        android:background="@color/white">

        <com.appsamurai.storyly.StorylyView
            android:id="@+id/storyly_view_demo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="10dp"
            android:paddingTop="5dp"/>

    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dip"
        android:background="@color/white">

        <Button
            android:id="@+id/reset_Story"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginStart="5dp"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="5dp"
            android:layout_marginBottom="5dp"
            android:text="Reset">
        </Button>
    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fillViewport="true"
        android:scrollbars="vertical"
        app:layout_constrainedHeight="@id/holder_view"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:ignore="MissingConstraints"
        android:background="@color/white">

        <LinearLayout
            android:id="@+id/scrollable_holder"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:contentDescription="">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dip"
                    android:layout_marginBottom="10dp"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="6dp"
                        android:layout_marginBottom="5dp"
                        android:text="Choose Text Color"
                        android:textColor="@color/black"
                        android:textSize="17dp"></TextView>

                    <Spinner
                        android:id="@+id/textColorPicker_spinner"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:autofillHints="Text Color"
                        android:entries="@array/colors" />

                    <RelativeLayout
                        android:id="@+id/custom_color_text_hidden"
                        android:layout_width="wrap_content"
                        android:layout_height="60dp"
                        android:visibility="gone">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="100dp"
                            android:orientation="horizontal">

                            <Button
                                android:id="@+id/color_show_button"
                                android:layout_width="50dp"
                                android:layout_height="50dp"
                                android:layout_alignParentEnd="true"
                                android:layout_marginStart="10dp"
                                android:layout_marginTop="10dp"
                                android:layout_marginEnd="60dp"
                                android:layout_marginBottom="10dp"></Button>

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="10dp"
                                android:layout_marginEnd="40dp"
                                android:layout_marginBottom="10dp"
                                android:orientation="horizontal">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="#Hex"
                                    android:textSize="15dp"></TextView>

                                <EditText
                                    android:id="@+id/custom_text_color"
                                    android:layout_width="100dp"
                                    android:layout_height="wrap_content"></EditText>
                            </LinearLayout>

                            <Button
                                android:id="@+id/custom_text_color_apply"
                                android:layout_width="90dp"
                                android:layout_height="50dp"
                                android:layout_marginTop="10dp"
                                android:layout_marginBottom="10dp"
                                android:text="Apply"></Button>

                        </LinearLayout>
                    </RelativeLayout>

                </LinearLayout>

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginBottom="10dp"
                    android:layout_marginTop="15dip"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="6dp"
                        android:layout_marginBottom="5dp"
                        android:text="Choose Text Font"
                        android:textSize="17dp"
                        android:textColor="@color/black">
                    </TextView>

                    <Spinner
                        android:id="@+id/textFontPicker_spinner"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:autofillHints="Text Color"
                        android:entries="@array/fonts" />

                </LinearLayout>
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:layout_marginTop="15dip"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="6dp"
                        android:layout_marginBottom="5dp"
                        android:text="Choose Icon Background Color"
                        android:textSize="17dp"
                        android:textColor="@color/black">
                    </TextView>

                    <Spinner
                        android:id="@+id/iconColorPicker_spinner"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:autofillHints="Text Color"
                        android:entries="@array/colors" />

                    <RelativeLayout
                        android:id="@+id/custom_color_icon_background_hidden"
                        android:layout_width="wrap_content"
                        android:layout_height="60dp"
                        android:visibility="gone">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="100dp"
                            android:orientation="horizontal">

                            <Button
                                android:id="@+id/icon_background_color_show_button"
                                android:layout_width="50dp"
                                android:layout_height="50dp"
                                android:layout_alignParentEnd="true"
                                android:layout_marginStart="10dp"
                                android:layout_marginTop="10dp"
                                android:layout_marginEnd="60dp"
                                android:layout_marginBottom="10dp">
                            </Button>

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="10dp"
                                android:layout_marginEnd="40dp"
                                android:layout_marginBottom="10dp"
                                android:orientation="horizontal">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="#Hex"
                                    android:textSize="15dp">
                                </TextView>

                                <EditText
                                    android:id="@+id/icon_background_custom_text_color"
                                    android:layout_width="100dp"
                                    android:layout_height="wrap_content">
                                </EditText>
                            </LinearLayout>

                            <Button
                                android:id="@+id/icon_backgorund_custom_text_color_apply"
                                android:layout_width="90dp"
                                android:layout_height="50dp"
                                android:layout_marginTop="10dp"
                                android:layout_marginBottom="10dp"
                                android:text="Apply">
                            </Button>

                        </LinearLayout>
                    </RelativeLayout>

                </LinearLayout>

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="15dip">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="9dp"
                    android:layout_marginEnd="10dp"
                    android:text="@string/isTextVisible"
                    android:textColor="@color/black"
                    android:textSize="17dp" />

                <CheckBox
                    android:id="@+id/checkbox_textVisible"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_alignParentEnd="true"
                    android:layout_marginStart="10dp"
                    android:layout_marginEnd="0dp"
                    android:checked="true"
                    android:inputType="numberDecimal" />

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:paddingBottom="20dp">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <TextView
                            android:layout_width="200dp"
                            android:layout_height="wrap_content"
                            android:paddingLeft="9dp"
                            android:text="Icon Border State Color"
                            android:textColor="@color/black"
                            android:textSize="17dp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingStart="39dp"
                            android:text="Number of color">
                        </TextView>

                        <Spinner
                            android:id="@+id/spinner_numberOf_borders"
                            android:layout_width="50dp"
                            android:layout_height="wrap_content"
                            android:entries="@array/borderNums"/>
                    </LinearLayout>
                    <LinearLayout
                        android:id="@+id/new_border_color_apply_holder"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        >
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_centerHorizontal="true">

                            <RadioGroup
                                android:id="@+id/border_radio_group_holder"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:layout_marginStart="5dp">
                            </RadioGroup>

                        </LinearLayout>
                        <LinearLayout
                            android:id="@+id/new_border_color_apply_holder2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="10dp"
                            android:orientation="horizontal"
                            android:visibility="gone">

                            <CheckBox
                                android:id="@+id/checkbox_new_border_visible"
                                android:layout_width="130dp"
                                android:layout_height="wrap_content"
                                android:text="@string/borderVisible"
                                android:checked="true"/>

                            <LinearLayout
                                android:id="@+id/custom_border_color_hex"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:visibility="gone">
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="#Hex"
                                    android:textSize="15dp"
                                    android:layout_marginTop="5dp">
                                </TextView>

                                <EditText
                                    android:id="@+id/border_editText_color"
                                    android:layout_width="50dp"
                                    android:layout_height="wrap_content">
                                </EditText>

                                <Button
                                    android:id="@+id/new_border_apply"
                                    android:layout_width="71dp"
                                    android:layout_height="50dp"
                                    android:textSize="11dp"
                                    android:text="Apply">
                                </Button>
                            </LinearLayout>

                            <Spinner
                                android:id="@+id/selected_border_color_spinner"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:entries="@array/colors"
                                android:layout_marginTop="15dp">
                            </Spinner>

                        </LinearLayout>
                        <Button
                            android:id="@+id/total_apply"
                            android:layout_width="71dp"
                            android:layout_height="50dp"
                            android:textSize="11dp"
                            android:text="Apply"
                            android:visibility="gone"
                            android:layout_gravity="center">
                        </Button>
                    </LinearLayout>

                </LinearLayout>
            </RelativeLayout>


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="15dip"
                android:visibility="gone">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/border_color_text"
                            android:layout_width="200dp"
                            android:layout_height="wrap_content"
                            android:paddingLeft="9dp"
                            android:text="Icon Border State Color"
                            android:textColor="@color/black"
                            android:textSize="17dp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingStart="39dp"
                            android:text="Number of color"
                            android:visibility="gone"></TextView>

                        <Spinner
                            android:layout_width="50dp"
                            android:layout_height="wrap_content"
                            android:paddingStart="50dp"
                            android:visibility="gone" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_gravity="center"
                        android:layout_margin="5dp"
                        android:orientation="horizontal">

                        <Spinner
                            android:id="@+id/borderColorPicker1_spinner"
                            android:layout_width="110dp"
                            android:layout_height="wrap_content"
                            android:layout_margin="5dp"
                            android:autofillHints="Text Color"
                            android:entries="@array/borderColors" />

                        <Spinner
                            android:id="@+id/borderColorPicker2_spinner"
                            android:layout_width="110dp"
                            android:layout_height="wrap_content"
                            android:layout_margin="5dp"
                            android:autofillHints="Text Color"
                            android:entries="@array/borderColors" />

                        <Spinner
                            android:id="@+id/borderColorPicker3_spinner"
                            android:layout_width="110dp"
                            android:layout_height="wrap_content"
                            android:layout_margin="5dp"
                            android:autofillHints="Text Color"
                            android:entries="@array/borderColors" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:orientation="horizontal">

                        <Button
                            android:id="@+id/border_color_apply"
                            android:layout_width="120dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_margin="5dp"
                            android:text="Apply"></Button>

                        <CheckBox
                            android:id="@+id/checkbox_icon_border_visible"
                            android:layout_width="150dp"
                            android:layout_height="wrap_content"
                            android:text="@string/borderVisible" />
                    </LinearLayout>
                </LinearLayout>
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:layout_marginTop="15dip"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="6dp"
                        android:layout_marginBottom="5dp"
                        android:text="Choose Pin Color"
                        android:textSize="17dp"
                        android:textColor="@color/black">
                    </TextView>

                    <Spinner
                        android:id="@+id/pinColorPicker_spinner"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:autofillHints="Text Color"
                        android:entries="@array/colors" />

                    <RelativeLayout
                        android:id="@+id/custom_color_pin_hidden"
                        android:layout_width="wrap_content"
                        android:layout_height="60dp"
                        android:visibility="gone">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="100dp"
                            android:orientation="horizontal">

                            <Button
                                android:id="@+id/pin_color_show_button"
                                android:layout_width="50dp"
                                android:layout_height="50dp"
                                android:layout_alignParentEnd="true"
                                android:layout_marginStart="10dp"
                                android:layout_marginTop="10dp"
                                android:layout_marginEnd="60dp"
                                android:layout_marginBottom="10dp">
                            </Button>

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="10dp"
                                android:layout_marginEnd="40dp"
                                android:layout_marginBottom="10dp"
                                android:orientation="horizontal">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="#Hex"
                                    android:textSize="15dp">
                                </TextView>

                                <EditText
                                    android:id="@+id/pin_custom_text_color"
                                    android:layout_width="100dp"
                                    android:layout_height="wrap_content">
                                </EditText>
                            </LinearLayout>

                            <Button
                                android:id="@+id/pin_custom_text_color_apply"
                                android:layout_width="90dp"
                                android:layout_height="50dp"
                                android:layout_marginTop="10dp"
                                android:layout_marginBottom="10dp"
                                android:text="Apply">
                            </Button>

                        </LinearLayout>
                    </RelativeLayout>
                </LinearLayout>

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:layout_marginTop="15dip"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="6dp"
                        android:layout_marginBottom="5dp"
                        android:text="Choose Ivon Icon Color"
                        android:textSize="17dp"
                        android:textColor="@color/black">
                    </TextView>

                    <Spinner
                        android:id="@+id/ivodColorPicker_spinner"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:autofillHints="Text Color"
                        android:entries="@array/colors" />

                    <RelativeLayout
                        android:id="@+id/custom_color_ivod_hidden"
                        android:layout_width="wrap_content"
                        android:layout_height="60dp"
                       >

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="100dp"
                            android:orientation="horizontal">

                            <Button
                                android:id="@+id/ivod_color_show_button"
                                android:layout_width="50dp"
                                android:layout_height="50dp"
                                android:layout_alignParentEnd="true"
                                android:layout_marginStart="10dp"
                                android:layout_marginTop="10dp"
                                android:layout_marginEnd="60dp"
                                android:layout_marginBottom="10dp">
                            </Button>

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="10dp"
                                android:layout_marginEnd="40dp"
                                android:layout_marginBottom="10dp"
                                android:orientation="horizontal">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="#Hex"
                                    android:textSize="15dp">
                                </TextView>

                                <EditText
                                    android:id="@+id/ivod_custom_text_color"
                                    android:layout_width="100dp"
                                    android:layout_height="wrap_content">
                                </EditText>
                            </LinearLayout>

                            <Button
                                android:id="@+id/ivod_custom_text_color_apply"
                                android:layout_width="90dp"
                                android:layout_height="50dp"
                                android:layout_marginTop="10dp"
                                android:layout_marginBottom="10dp"
                                android:text="Apply">
                            </Button>

                        </LinearLayout>
                    </RelativeLayout>

                </LinearLayout>

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:paddingTop="15dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingLeft="9dp"
                        android:text="Story Group Size"
                        android:textColor="@color/black"
                        android:textSize="17dp" />

                    <RadioGroup
                        android:id="@+id/radio_group_story_size"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:orientation="horizontal">

                        <RadioButton
                            android:id="@+id/group_size_large"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_margin="15dp"
                            android:text="Large">
                        </RadioButton>

                        <RadioButton
                            android:id="@+id/group_size_small"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_margin="15dp"
                            android:text="Small">
                        </RadioButton>

                        <RadioButton
                            android:id="@+id/group_size_custom"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_margin="15dp"
                            android:text="Custom">
                        </RadioButton>
                    </RadioGroup>

                    <LinearLayout
                        android:id="@+id/custimization_groupSize"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:visibility="gone">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentStart="true"
                                android:layout_centerVertical="true"
                                android:layout_margin="10dp"
                                android:text="Group Icon Height"
                                android:textColor="@color/black"
                                android:textSize="15sp" />

                            <EditText
                                android:id="@+id/editText_storyGroupInput1"
                                android:layout_width="50dp"
                                android:layout_height="50dp"
                                android:layout_alignParentEnd="true"
                                android:layout_margin="10dp"
                                android:inputType="numberDecimal" />
                        </RelativeLayout>

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentStart="true"
                                android:layout_centerVertical="true"
                                android:layout_margin="10dp"
                                android:text="Group Icon Width"
                                android:textColor="@color/black"
                                android:textSize="15sp" />

                            <EditText
                                android:id="@+id/editText_storyGroupInput2"
                                android:layout_width="50dp"
                                android:layout_height="50dp"
                                android:layout_alignParentEnd="true"
                                android:layout_margin="10dp"
                                android:inputType="numberDecimal" />
                        </RelativeLayout>

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentStart="true"
                                android:layout_centerVertical="true"
                                android:layout_marginStart="10dp"
                                android:layout_marginTop="10dp"
                                android:layout_marginEnd="10dp"
                                android:layout_marginBottom="10dp"
                                android:text="Group Icon CornerRadius"
                                android:textColor="@color/black"
                                android:textSize="15sp" />

                            <EditText
                                android:id="@+id/editText_storyGroupInput3"
                                android:layout_width="50dp"
                                android:layout_height="50dp"
                                android:layout_alignParentEnd="true"
                                android:layout_margin="10dp"
                                android:inputType="numberDecimal" />
                        </RelativeLayout>

                        <Button
                            android:id="@+id/size_apply"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:text="apply size">
                        </Button>
                    </LinearLayout>
                </LinearLayout>
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_marginBottom="10dp"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentStart="true"
                            android:layout_centerVertical="true"
                            android:layout_marginStart="10dp"
                            android:layout_marginEnd="10dp"
                            android:text="Edge Pedding"
                            android:textColor="@color/black"
                            android:textSize="15sp" />

                        <EditText
                            android:id="@+id/edge_pedding"
                            android:layout_width="50dp"
                            android:layout_height="wrap_content"
                            android:layout_alignParentEnd="true"
                            android:layout_margin="10dp"
                            android:inputType="numberDecimal" />
                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentStart="true"
                            android:layout_centerVertical="true"
                            android:layout_marginStart="10dp"
                            android:layout_marginEnd="10dp"
                            android:text="Pedding between Items"
                            android:textColor="@color/black"
                            android:textSize="15sp" />
                        <EditText
                            android:id="@+id/item_pedding"
                            android:layout_width="50dp"
                            android:layout_height="wrap_content"
                            android:layout_alignParentEnd="true"
                            android:layout_margin="10dp"
                            android:inputType="numberDecimal" />
                    </RelativeLayout>
                    <Button
                        android:id="@+id/pedding_apply"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Apply Peddings"
                        android:layout_gravity="center">
                    </Button>
                </LinearLayout>
            </RelativeLayout>

        </LinearLayout>
    </ScrollView>

</LinearLayout>